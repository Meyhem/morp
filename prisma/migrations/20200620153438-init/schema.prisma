datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int     @default(autoincrement()) @id
  username     String  @unique
  passwordHash String
  active       Boolean @default(true)
  roles        Role[]  @relation(references: [id])
}

model Role {
  id    Int    @default(autoincrement()) @id
  name  String @unique
  users User[] @relation(references: [id])
}
